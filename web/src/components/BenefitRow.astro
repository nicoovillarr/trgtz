---
interface Props {
  title: string;
  description: string;
  image?: string;
  direction?: "leftToRight" | "rightToLeft";
}

const { title, description, image, direction = "leftToRight" } = Astro.props;
---

<article
  class=`flex items-center ${direction == 'leftToRight' ? '' : 'flex-row-reverse'} gap-x-4`
>
  {image && <img src={image} alt={title} class="w-1/3" />}
  <aside>
    <h2 class="text-xl font-medium">{title}</h2>
    <p class="text-gray-500">{description}</p>
  </aside>
</article>
